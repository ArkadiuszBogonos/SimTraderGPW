<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fr_wallet_title_background"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorDelicateGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fr_wallet_label_wallet_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/wallet_value"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <TextView
        android:id="@+id/fr_wallet_wallet_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorTrendingUp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_label_wallet_value_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_label_wallet_value_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_label_wallet_value_tv" />

    <TextView
        android:id="@+id/fr_wallet_label_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/money"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_label_wallet_value_tv" />

    <TextView
        android:id="@+id/fr_wallet_label_stocks_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/owned_stocks_value"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_label_money_tv" />

    <TextView
        android:id="@+id/fr_wallet_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorTrendingUp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_label_money_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_label_money_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_label_money_tv"
        tools:text="0" />

    <TextView
        android:id="@+id/fr_wallet_stocks_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorTrendingUp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_label_stocks_value_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_label_stocks_value_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_label_stocks_value_tv" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_label_loan_tv" />

    <TextView
        android:id="@+id/fr_wallet_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wallet_details"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_title_background"
        app:layout_constraintEnd_toEndOf="@+id/fr_wallet_title_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fr_wallet_owned_stocks_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/owned_stocks"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <TextView
        android:id="@+id/fr_wallet_wallet_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/wallet"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_title_background" />

    <TextView
        android:id="@+id/fr_wallet_currency_sufix_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/pln_sufix"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_wallet_value_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_wallet_value_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_wallet_value_tv"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/fr_wallet_currency_sufix_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/pln_sufix"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_money_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_money_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_money_tv"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/fr_wallet_currency_sufix_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/pln_sufix"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_stocks_value_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_stocks_value_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_stocks_value_tv"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/fr_wallet_label_loan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/loans_colon"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_label_stocks_value_tv" />

    <TextView
        android:id="@+id/fr_wallet_loan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorTrendingDown"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_label_loan_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_label_loan_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_label_loan_tv"
        tools:text="0" />

    <TextView
        android:id="@+id/fr_wallet_currency_sufix_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pln_sufix"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fr_wallet_loan_tv"
        app:layout_constraintStart_toEndOf="@+id/fr_wallet_loan_tv"
        app:layout_constraintTop_toTopOf="@+id/fr_wallet_loan_tv"
        app:layout_constraintVertical_bias="0.8" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_wallet_tv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorDelicateGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_owned_stocks_tv">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/name"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.37" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/ticker"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline21"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.53" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.54" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/quantity"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline22"
            app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.72" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.73" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Szacowana wartość"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.98" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fr_wallet_owned_stocks_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <View
        android:id="@+id/divider11"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr_wallet_title_background" />

</androidx.constraintlayout.widget.ConstraintLayout>